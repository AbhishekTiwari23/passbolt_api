#!/bin/bash

# This file is an example on how to use the create_paratest_suites.php script
# It can be deleted once successfully integrated into 


LOG_PATH="./tmp/paratest"

mkdir -p $LOG_PATH
rm $LOG_PATH/* || true

PHPUNIT_XML_FILE=$1;
NUMBER_OF_SUITES=$2;

php ./tests/create_paratest_suites.php "$PHPUNIT_XML_FILE" "$NUMBER_OF_SUITES"


# After that, run each suite as follows, e.g. for test suite 1:
# vendor/bin/phpunit -c {$PHPUNIT_XML_FILE} --testsuite 1
